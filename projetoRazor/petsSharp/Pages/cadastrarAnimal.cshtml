@page
@model petsSharp.Pages.cadastrarAnimalModel
@{
	Layout = null;
}


<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Cadastrar Animais</title>
	<link href="~/css/styleCadastrarAnimais.css" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="styleCadastrarAnimais.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body style="background-color: #151A30;">
	<header>
		<div id="cabecalho">
			<img id="profileicon" src="~/img/Imagens_animal/profileicon.png">
			<a asp-page="/index" asp-area="" style="color: red;">Sair</a>
		</div>
	</header>
	<main>
		<div id="menu">
			<a class="textoDashboard" asp-page="/dashboard" asp-area="" style="color: white;">Dashboard</a>
			<img class="ImagemDashboard" src="~/img/Imagens_animal/dashboard.png">
			<a class="textoEstoque" asp-page="/estoque" asp-area="" style="color: white">Estoque</a>
			<img class="ImagemEstoque" src="~/img/Imagens_animal/estoque.png">
			<a class="textoVendas" asp-page="/indexVendas" asp-area="" style="color: white">Vendas</a>
			<img class="ImagemVendas" src="~/img/Imagens_animal/sales.png">
			<div class="selecionado">
				<a class="textoAnimais" asp-page="/indexAnimais" asp-area="" style="color: white;">Animais</a>
				<img class="ImagemAnimais" src="~/img/Imagens_animal/animais.png">
				<a class="textoCadastrarAnimais" asp-page="/cadastrarAnimal" asp-area="" style="color: #004BE3">Cadastrar animais</a>
			</div>
			<a class="textoBanhoetosa" asp-page="/indexBanhoETosa" asp-area="" style="color: white;">Banho e tosa</a>
			<img class="ImagemTesoura" src="~/img/Imagens_animal/tesoura.png">
		</div>
		<form method="post">
			<div class="quadradoCentral">
				<p class="textoEspecie">Espécie:</p>
				<div class="quadradoEspecie">
					<label class="form-label"></label>
					<input asp-for="@Model.Especie" type="text" class="form-control border-black" id="campoCliente" style="background-color: #151A30; color:white;" required>
				</div>
				<p class="textoValor">Valor:</p>
				<div class="quadradoValor">
					<label class="form-label"></label>
					<input asp-for="@Model.Valor" type="number" step="0.01" placeholder="0.00" class="form-control border-black" id="campoProduto" style="background-color: #151A30; color:white;" required>
				</div>
				<p class="textoFornecedor">Fornecedor:</p>
				<div class="quadradoFornecedor">
					<label class="form-label"></label>
					<input list="fornecedores" asp-for="@Model.Fornecedor" type="text" class="form-control border-black" id="campoQuantidade" style="background-color: #151A30; color:white;" required>
					<datalist id="fornecedores">
						@foreach (string nomeFornecedor in Model.ListaFornecedores)
						{
							<option value="@nomeFornecedor"></option>

						}

					</datalist>
				</div>
				<p class="textoDescricao">Descrição:</p>
				<div class="quadradoDescricao">
					<label class="form-label"></label>
					<textarea asp-for="@Model.Descricao" class="form-control border-black" id="campoDescricao" rows="3" style="background-color: #151A30; color:white;" required></textarea>
				</div>
				<button type="submit" class="btn btn-success confirmar">Confirmar</button>
				@if (Model.Fornecedor == "ERRO: NÃO ENCONTRADO")
				{
					<h5 class="text-center text-danger">O fornecedor não existe no sistema</h5>
				}
			</div>
		</form>
	</main>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>