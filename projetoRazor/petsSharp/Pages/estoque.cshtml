@page
@model petsSharp.Pages.estoqueModel
@{
	Layout = null;

}


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Estoque</title>
    <link rel="stylesheet" href="~/css/style-estoque.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body style="background-color: #151A30;">
    <header>
      <div id="cabecalho">
        <img id="profileicon" src="~/img/imagens/profileicon.png"></img>
        <a asp-area="" asp-page="/Index" style="color: red;">Sair</a>
      </div>
    </header>
    <main>
      <div id="menu">
        <div class="selecionado"></div>
        <a1 href="#" style="color: white;">Dashboard</a1>
        <img class="dashboard" src="~/img/imagens/dashboard.png"></img>
        <a2 href="#" style="color:#004BE3">Estoque</a2>
        <img class="estoque" src="~/img/imagens/estoque.png"></img>
        <a22 href="#" style="color: white;">Cadastrar produto</a22>
        <a23 href="#" style="color: white;">Cadastrar fornecedor</a23>
        <a24 href="#" style="color: white;">Gerenciar estoque</a24>
        <a3 href="#" style="color: white;">Vendas</a3>
        <img class="vendas" src="~/img/imagens/sales.png"></img>
        <a4 href="#" style="color: white;">Animais</a4>
        <img class="animais" src="~/img/imagens/animais.png"></img>
        <a5 href="#" style="color: white;">Banho e tosa</a5>
        <img class="tesoura" src="~/img/imagens/tesoura.png"></img>
      </div>
      <div class="quadradoCentral">
        <form asp-page-handler="Pesquisa" method="post" class="d-flex barraDePesquisa" role="search">
            <input asp-for="@Model.pesquisa" class="form-control text-white border-black" type="search" placeholder="" aria-label="Search" style="background-color: #212B46; width: 200px;">
            <button class="btn border-black" type="submit" style="background-color: #212B46; color: white;">Pesquisar</button>
        </form>

<div class="container mt-4">
 <table class="table table-striped custom-dark-bg text-white">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Categoria</th>
        <th scope="col">Valor Unitário</th>
      </tr>
    </thead>
    <tbody>
            @foreach(Dictionary<string,string> dicionario in Model.list_produtos)
            {
                    <tr>
                    <td>@dicionario["nome"]</td>
                    <td>@dicionario["categoria"]</td>
                    <td>R$ @dicionario["valor"]</td>
                    </tr>
            }

             <tr>
            <td  class="font-weight-bold"></td>
            <td class="font-weight-bold"><b>Valor Total:</b></td>

            <td class="font-weight-bold">
                <b>R$ @Model.valorTotal</b>
            </td>
        </tr>
    </tbody>
  </table>
</div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>